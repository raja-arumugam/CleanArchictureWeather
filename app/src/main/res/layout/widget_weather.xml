<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/app_weather_background"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_7_sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_7_sp"
            android:layout_weight="1.2"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_widget_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_22_sp" />

            <TextView
                android:id="@+id/tv_weather_widget_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_20_sp" />

            <TextView
                android:id="@+id/tv_weather_widget_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dimen_3"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_16_sp" />

            <TextView
                android:id="@+id/tv_weather_widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dimen_3"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_13_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dimen_7"
            android:layout_weight="0.8"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_widget_weather"
                android:layout_width="@dimen/dimen_90"
                android:layout_height="@dimen/dimen_90"
                android:layout_gravity="end"
                android:layout_margin="@dimen/dimen_7"
                android:contentDescription="@string/weatherAppImage"
                android:outlineProvider="bounds"
                android:scaleType="fitXY"
                tools:ignore="TooDeepLayout" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>